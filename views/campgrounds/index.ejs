<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <h1><i class="far fa-smile"></i> Welcome To YelpCamp</h1>
        <p>
            view the world camp
        </p>
        <p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new"><i class="fas fa-plus"></i> Add New Campground</a>
        </p>
    </header>

    <div class="row">
        <% data.forEach(function(campground){ %>
            <div class="col-lg-3 col-md-3 col-sm-6">
                <div class="img-thumbnail img-responsive text-center" style="display:flexl flex-wrap: wrap;">
                    <img src="<%= campground.image%>">
                    <div class="caption">
                        <h4><%= campground.name%></h4>
                    </div>
                    <p>
                      <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"><i class="fas fa-info-circle"></i> More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>

</div>

<% include ../partials/footer %>
