<!DOCTYPE html>
<html>
    <head>
        <title>YelpCamp</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css">
        <script defer src="https://use.fontawesome.com/releases/v5.0.4/js/all.js"></script>
        <link rel="shortcut icon" href="favicon.ico">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container" id="navbar_yelp">
            <div class="navbar-header">
                <a class="navbar-brand" href="/"><i class="fas fa-camera-retro"></i> YelpCamp</a>
            </div>
            <form class="form-inline">
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                      <% if(!curUser){ %>
                        <li class="nav-item"><a class="nav-link" href="/login"><i class="fas fa-desktop"></i> Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="/register"><i class="fas fa-user-plus"></i> Sign up</a></li>
                      <% } else {%>
                        <li class="nav-item"><a class="nav-link" href="#"><i class="far fa-user"></i>Signed In As <%= curUser.username%></a></li>
                        <li class="nav-item"><a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i>Logout</a></li>
                      <% } %>

                    </ul>
                </div>
            </form>
        </div>
    </nav>
    <div class="container">
      <!-- <% if(error && error.length > 0){ %> -->
      <div class="alert alert-danger" role="alert">
        <h4><%= error %></h4>
      </div>
      <!-- <% } %>
      <% if(success && success.length > 0){ %> -->
      <div class="alert alert-success" role="alert">
        <h4><%= success %></h4>
      </div>
      <!-- <% } %> -->
    </div>
